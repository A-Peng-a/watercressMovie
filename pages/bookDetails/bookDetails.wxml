<view class="details">
<van-row custom-class="box">

   <van-col span="8">
 <van-image width="100%" height="300rpx;" src="{{bookDetails.images}}"/>
   </van-col>
  <van-col span="16" class="bookTxt">
   <view class="bookTitle">{{bookDetails.title}}</view>
  <view>作者：{{bookDetails.author}}</view> 
  <view>出版时间：{{bookDetails.pubdate}}</view>
  <view>单价：{{bookDetails.price}}</view>
 
  </van-col>
</van-row>
</view>
<view class="synopsis">
    <view class="synopsisInfo">
      <text style="line-height:80rpx;color:gray;font-size:25rpx;">简介</text>
      <view class="synTxt">
        {{bookDetails.summary}}

      </view>
    </view>
  </view>
